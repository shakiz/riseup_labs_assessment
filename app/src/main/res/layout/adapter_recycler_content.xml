<androidx.cardview.widget.CardView
    android:id="@+id/item_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/BackgroundImage"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/md_white_1000"
        android:gravity="center"
        android:tag="Background"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@color/md_white_1000"
            android:clickable="true"
            android:elevation="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <ImageView
                android:src="@drawable/ic_spa"
                android:layout_width="match_parent"
                android:tag="Drawable"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginRight="8dp"
                android:textColor="#3E3E3E"
                android:text="@string/name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:gravity="center|left"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:tag="Duration"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:textColor="@color/md_deep_orange_500"
                        android:hint="@string/show_type"
                        android:textColorHint="@color/md_deep_orange_500"
                        android:ellipsize="end"
                        android:maxLines="2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:tag="Duration"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="center|left"
                        android:textColor="@color/md_deep_orange_500"
                        android:hint=":"
                        android:textColorHint="@color/md_deep_orange_500"
                        android:ellipsize="end"
                        android:maxLines="2"/>

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:tag="Duration"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:textColor="@color/md_deep_orange_500"
                        android:hint="@string/test_data"
                        android:textColorHint="@color/md_deep_orange_500"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:scrollHorizontally="true"
                        android:text="@string/language"
                        android:textColor="@color/md_green_600"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:text=":"
                        android:textColor="@color/md_green_600"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingRight="4dp"
                        android:scrollHorizontally="true"
                        android:text="@string/test_data"
                        android:textColor="@color/md_green_600"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textColor="@color/md_teal_500"
                    android:hint="@string/schedule"
                    android:textColorHint="@color/md_teal_500"
                    android:ellipsize="end"
                    android:maxLines="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textColor="@color/md_teal_500"
                    android:hint=":"
                    android:textColorHint="@color/md_teal_500"
                    android:ellipsize="end"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textColor="@color/md_teal_500"
                    android:hint="@string/test_data"
                    android:textColorHint="@color/md_teal_500"
                    android:ellipsize="end"
                    android:maxLines="2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:tag="Date"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:textColor="@color/md_grey_800"
                    android:hint="@string/rating"
                    android:textColorHint="@color/md_grey_800"
                    android:ellipsize="end"
                    android:maxLines="2"/>

                <SeekBar
                    android:id="@+id/ratingBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:maxHeight="6dp"
                    android:minHeight="6dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:progress="0"
                    android:max="10"
                    android:progressDrawable="@drawable/seek_bar_style"
                    android:splitTrack="false"
                    android:thumb="@drawable/custom_thumb" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>



